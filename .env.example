# ============================================
# Warehouse Microservice Configuration
# ============================================
# Service Domain - Used by nginx-microservice for auto-registry (required for correct domain detection)
# Service Name - Used for logging and service identification

NODE_ENV=production
DOMAIN=warehouse.statex.cz
SERVICE_NAME=warehouse-microservice
PORT=3201

# Warehouse Microservice Configuration
# Copy this file to .env and fill in the values

# Database Configuration (shared database-server)
DB_HOST=db-server-postgres
DB_PORT=5432
DB_USER=dbadmin
DB_PASSWORD=your_db_password_here
DB_NAME=warehouse_db

# Redis Configuration (shared database-server)
REDIS_HOST=db-server-redis
REDIS_PORT=6379

# External Shared Microservices
AUTH_SERVICE_URL=http://auth-microservice:3370
LOGGING_SERVICE_URL=http://logging-microservice:3367
NOTIFICATION_SERVICE_URL=http://notifications-microservice:3368

# JWT Configuration (must match auth-microservice)
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info
LOG_TIMESTAMP_FORMAT=YYYY-MM-DD HH:mm:ss

# CORS
CORS_ORIGIN=https://warehouse.statex.cz,https://allegro.statex.cz,https://flipflop.statex.cz

# Database URL (constructed from DB_* variables above)
# Format: postgresql://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME
# Note: URL-encode special characters in password
DATABASE_URL=postgresql://dbadmin:your_url_encoded_password_here@db-server-postgres:5432/warehouse_db

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# Catalog Service URL (for product lookups)
CATALOG_SERVICE_URL=http://catalog-microservice:3200
